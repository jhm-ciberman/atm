<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="com.ciberman.atm.controllers.AccountSelectController">
    <top>
        <Label text="Seleccione una cuenta" BorderPane.alignment="CENTER">
            <font>
                <Font name="Calibri Bold" size="42.0"/>
            </font>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
        </Label>
    </top>
    <center>
        <VBox fx:id="accountButtonsContainer" alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
              BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCancelPressed"
                    prefHeight="63.0" prefWidth="214.0" text="CANCELAR">
                <font>
                    <Font name="Calibri" size="20.0"/>
                </font>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
