<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="com.ciberman.atm.controllers.MainMenuController">
    <left>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onPasswordChangePressed"
                    prefWidth="320.0" text="Cambio de Clave">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="25.0"/>
                </font>
            </Button>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onCheckBalancePressed"
                    prefWidth="320.0" text="Consulta de Saldo">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="25.0"/>
                </font>
            </Button>
            <Button alignment="BASELINE_LEFT" layoutX="30.0" layoutY="146.0" mnemonicParsing="false"
                    onAction="#onRetrieveMoneyPressed" prefWidth="320.0" text="Retirar dinero">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="25.0"/>
                </font>
            </Button>
        </VBox>
    </left>
    <right>
        <VBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button alignment="BASELINE_RIGHT" contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="#onDepositMoneyPressed" prefWidth="320.0" text="Depositar dinero">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="25.0"/>
                </font>
            </Button>
            <Button alignment="BASELINE_RIGHT" mnemonicParsing="false" prefWidth="320.0" text="Transferencia de Dinero">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="25.0"/>
                </font>
            </Button>
            <Button alignment="BASELINE_RIGHT" layoutX="30.0" layoutY="146.0" mnemonicParsing="false"
                    onAction="#onCheckTransactionsPressed" prefWidth="320.0" text="Consulta de Movimientos">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="25.0"/>
                </font>
            </Button>
        </VBox>
    </right>
    <top>
        <Label fx:id="welcomeLabel" text="Bienvenido" BorderPane.alignment="CENTER">
            <font>
                <Font name="Calibri Bold" size="42.0"/>
            </font>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
        </Label>
    </top>
    <bottom>
        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#onExitPressed" text="Finalizar">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="23.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
