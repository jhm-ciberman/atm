    <center>
        <VBox alignment="CENTER" maxWidth="700.0" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/success.png"/>
            </ImageView>
            <Label fx:id="titleLabel" text="Â¡Estupendo!">
                <font>
                    <Font name="Calibri" size="44.0" />
                </font>
            </Label>
            <Label fx:id="subtitleLabel" text="El pin fue cambiado correctamente">
                <font>
                    <Font name="Calibri" size="18.0" />
                </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCancelPressed" prefWidth="200.0" text="ENTENDIDO">
                    <font>
                        <Font name="Calibri" size="20.0" />
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
