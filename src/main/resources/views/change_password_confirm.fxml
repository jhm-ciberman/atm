<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ciberman.atm.controllers.ChangePasswordConfirmController">
    <center>
        <VBox alignment="CENTER" maxWidth="700.0" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Repita el PIN">
                <font>
                    <Font name="Calibri" size="44.0" />
                </font>
            </Label>
            <Label text="Repita el pin anterior para confirmar">
                <font>
                    <Font name="Calibri" size="18.0" />
                </font>
            </Label>
            <PasswordField fx:id="pinField" alignment="CENTER" prefColumnCount="4" promptText="Repita el nuevo PIN">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <font>
                    <Font name="Calibri" size="35.0" />
                </font>
            </PasswordField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCancelPressed" prefWidth="200.0" text="CANCELAR">
                    <font>
                        <Font name="Calibri" size="20.0" />
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </Button>
                <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onContinuePressed" prefWidth="200.0" text="CAMBIAR PIN">
                    <font>
                        <Font name="Calibri" size="20.0" />
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
