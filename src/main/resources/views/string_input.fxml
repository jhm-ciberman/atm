<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="500.0" minWidth="500.0"
            xmlns="http://javafx.com/javafx/8.0.121">
    <center>
        <VBox alignment="CENTER" maxWidth="700.0" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label fx:id="titleLabel" text="Retirar dinero de la cuenta">
                <font>
                    <Font name="Calibri" size="44.0"/>
                </font>
            </Label>
            <Label fx:id="subtitleLabel" layoutX="134.0" layoutY="280.0" text="Introduzca el monto a retirar en pesos">
                <font>
                    <Font name="Calibri" size="23.0"/>
                </font>
            </Label>
            <TextField fx:id="amountTextField" alignment="CENTER" promptText="Monto">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <font>
                    <Font name="Calibri" size="35.0"/>
                </font>
            </TextField>
            <Label fx:id="infoLabel" text="El monto debe ser mÃºltiplo de $100">
                <font>
                    <Font name="Calibri" size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCancelPressed"
                        prefWidth="200.0" text="CANCELAR">
                    <font>
                        <Font name="Calibri" size="20.0"/>
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </Button>
                <Region minWidth="20.0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="continueButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#onContinuePressed" prefWidth="200.0" text="RETIRAR">
                    <font>
                        <Font name="Calibri" size="20.0"/>
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
